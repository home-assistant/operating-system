+		gpios = <&gio_aon 9 GPIO_ACTIVE_HIGH>;
+	};
+
+	led_pwr: led-pwr {
+		label = "pwr";
+		default-state = "off";
+		linux,default-trigger = "default-on";
+		gpios = <&rp1_gpio 44 GPIO_ACTIVE_LOW>;
+	};
+
+	led_usr: led-usr {
+		label = "usr";
+		linux,default-trigger = "heartbeat";
+		default-state = "off";
+		panic-indicator;
